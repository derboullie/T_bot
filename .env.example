# ======================
# API CREDENTIALS
# ======================

# Polygon.io API Key (get from https://polygon.io)
POLYGON_API_KEY=your_polygon_api_key_here

# Alpaca API Credentials (get from https://alpaca.markets)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Alpaca Base URL
# Paper Trading: https://paper-api.alpaca.markets
# Live Trading: https://api.alpaca.markets
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# ======================
# DATABASE
# ======================

# SQLite (default for development)
DATABASE_URL=sqlite:///./tradingbot.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/tradingbot

# ======================
# TRADING PARAMETERS
# ======================

# Maximum position size per trade (in USD)
MAX_POSITION_SIZE=10000

# Maximum daily loss limit (in USD)
MAX_DAILY_LOSS=1000

# Maximum number of concurrent positions
MAX_POSITIONS=10

# Risk per trade (percentage of portfolio)
RISK_PER_TRADE=1.0

# ======================
# RESOURCE MANAGEMENT
# ======================

# CPU usage limit (percentage)
CPU_LIMIT_PERCENT=85

# Number of worker threads
WORKER_THREADS=4

# Data refresh interval (seconds)
DATA_REFRESH_INTERVAL=1

# ======================
# SECURITY
# ======================

# JWT Secret Key (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here

# JWT Expiration (in minutes)
JWT_EXPIRATION_MINUTES=60

# API Access Token (for frontend-backend communication)
API_ACCESS_TOKEN=your_api_access_token_here

# ======================
# LOGGING
# ======================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/tradingbot.log

# ======================
# BACKTESTING
# ======================

# Default backtesting period (days)
BACKTEST_DAYS=365

# Starting capital for backtesting
BACKTEST_INITIAL_CAPITAL=100000

# ======================
# MACHINE LEARNING
# ======================

# ML model training enabled
ML_TRAINING_ENABLED=false

# ML model path
ML_MODEL_PATH=models/

# Training data lookback (days)
ML_TRAINING_LOOKBACK_DAYS=730

# Feature update interval (hours)
ML_FEATURE_UPDATE_HOURS=24

# ======================
# FRONTEND
# ======================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Backend API URL
BACKEND_URL=http://localhost:8000

# ======================
# MONITORING
# ======================

# Enable Prometheus metrics
PROMETHEUS_ENABLED=false

# Prometheus port
PROMETHEUS_PORT=9090
